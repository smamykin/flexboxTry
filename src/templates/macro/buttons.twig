{# button.scss #}
{% macro header_menu_btn(value, link, isActive = true, classes = {}, title=null, attrs = '') %}
    {% set classes = html_classes(classes, 'btn_header-menu', {'active': isActive}) %}
    {% include 'templates/macro/_elements/base.button-link.twig' %}
{% endmacro %}

{% macro button(value, opts) %}
    {% set opts = {
        type:'button',
        narrower: false,
        outline: false,
        classes: '',
    }|merge(opts) %}

    {% set classes = html_classes(opts.classes, {
        'btn_narrower': opts.narrower,
        'btn_outline': opts.outline,
    }) %}
    {% set type = opts.type %}

    {% if type == 'link' %}
        {% include 'templates/macro/_elements/base.button-link.twig' %}
    {% else %}
        {% include 'templates/macro/_elements/base.button.twig' %}
    {% endif %}
{% endmacro %}

